<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 class="bg-success-subtle p-2 text-center text-success w-100">CREATE EVENT</h1>
  <form class="m-3 d-flex flex-column justify-content-evenly flex-wrap align-items-center" style="width: 380px;">
     <input class="m-2 p-2 text-center w-100" type="text" name="place" id="place" placeholder="LUGAR" />
     <input class="m-2 p-2 text-center w-100" type="date" name="date" id="date" placeholder="FECHA" />
     <input class="m-2 p-2 text-center w-100" type="text" name="message" id="message" placeholder="MENSAJE" />
    <input class="m-2 p-2 text-center btn btn-success w-100" type="button" id="confirm" value="CREAR" />
    <input class="m-2 p-2 text-center btn btn-success w-100" type="button" id="decline" value="CANCELAR" />
  </form>
</main>
